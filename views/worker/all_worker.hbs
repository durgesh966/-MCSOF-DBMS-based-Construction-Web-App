{{>navbar}}
<div class="container mt-5">
    <h2 class="mb-4 text-center"> Our Team </h2>
    <div class="row">
        {{#each worker_details}}
        <div class="col-lg-3 mb-4">
            <div class="card text-center">
                <div class="member-card pt-3 pb-3">
                    <div class="thumb-lg member-thumb mx-auto">
                        <img src="/uploads/{{image}}" class="rounded-circle img-thumbnail" alt="profile-image">
                    </div>
                    <div class="mt-1">
                        <h4>{{this.first_name}} {{this.last_name}}</h4>
                        <p class="text-muted">{{this.service}}</p>
                    </div>
                    <a href="/worker_details{{this._id}}" type="button"
                        class="btn btn-primary text-dark">View Profile</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
