{{> navbar}}

{{#if message}}
    <div id="flash-message" class="alert alert-info alert-dismissible fade show position-fixed top-50 start-50 translate-middle-x" role="alert">
        {{message}}
    </div>
{{else if error}}
    <div id="flash-message" class="alert alert-danger alert-dismissible fade show position-fixed top-50 start-50 translate-middle-x" role="alert">
        {{error}}
    </div>
{{else if success}}
    <div id="flash-message" class="alert alert-success alert-dismissible fade show position-fixed top-50 start-50 translate-middle-x" role="alert">
        {{success}}
    </div>
{{/if}}

<div class="main-container mt-5">
	<h1>{{success}}</h1>
	<h4 class="sub--main-title mt-5">High standards, high quality</h4>
	<h1 class="main-title anim">Design & Development</h1>
	<p class="description sub--main-title">We connect you with the best home service professionals in your city</p>
	<div class="buttons mt-4">
		<a href="/work_status" class="btn btn-primary text-dark me-3">view Work status</a>
		<a href="/services" class="btn btn-secondary">View More Services</a>
	</div>
</div>

<div class="container mt-5">
	<div class="row">
		{{#each show_Work_details}}
		<div class="col">
			<!-- ... (content of the first card) -->
			<div class="card l-bg-cherry">
				<div class="card-statistic-3 p-4">
					<div class="card-icon card-icon-large"><i class="fas fa-shopping-cart"></i></div>
					<div class="mb-4">
						<h5 class="card-title mb-0">New Task</h5>
					</div>
					<div class="row align-items-center mb-2 d-flex">
						<div class="col-8">
							<h2 class="d-flex align-items-center mb-0">
								{{this.new_task}}+
							</h2>
						</div>
					</div>
				</div>
			</div>
		</div>


		<div class="col">
			<!-- ... (content of the second card) -->
			<div class="card l-bg-blue-dark">
				<div class="card-statistic-3 p-4">
					<div class="card-icon card-icon-large"><i class="fas fa-users"></i></div>
					<div class="mb-4">
						<h5 class="card-title mb-0">Customers</h5>
					</div>
					<div class="row align-items-center mb-2 d-flex">
						<div class="col-8">
							<h2 class="d-flex align-items-center mb-0">
								{{this.customers}}+
							</h2>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col">
			<!-- Content of the third card -->
			<div class="card l-bg-green-dark">
				<div class="card-statistic-3 p-4">
					<div class="card-icon card-icon-large"><i class="fas fa-ticket-alt"></i></div>
					<div class="mb-4">
						<h5 class="card-title mb-0">Task Completed</h5>
					</div>
					<div class="row align-items-center mb-2 d-flex">
						<div class="col-8">
							<h2 class="d-flex align-items-center mb-0">{{this.task_completed}}+</h2>
						</div>
					</div>
				</div>
			</div>
		</div>


		<div class="col">
			<!-- ... (content of the fourth card) -->
			<div class="card l-bg-orange-dark">
				<div class="card-statistic-3 p-4">
					<div class="card-icon card-icon-large"><i class="fas fa-dollar-sign"></i></div>
					<div class="mb-4">
						<h5 class="card-title mb-0">Team members</h5>
					</div>
					<div class="row align-items-center mb-2 d-flex">
						<div class="col-8">
							<h2 class="d-flex align-items-center mb-0">
								{{this.team_members}}+
							</h2>
						</div>
					</div>
				</div>
			</div>
		</div>
		{{/each}}
	</div>
</div>

